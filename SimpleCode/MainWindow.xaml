<Window x:Class="SimpleCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SimpleCode.Views"
        xmlns:vms="clr-namespace:SimpleCode.ViewModels"
        xmlns:local="clr-namespace:SimpleCode"
        mc:Ignorable="d"
        Icon="./../../Assets/Images/simplecode-logo.jpg"
        Title="Simple Code" Height="800" Width="1100" ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        Activated="MainWindow_OnActivated"
        Deactivated="MainWindow_OnDeactivated">
    <Window.Resources>
        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C75B7A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#921A40" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#C75B7A">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#921A40" Offset="0" />
                <GradientStop Color="#C75B7A" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="8 8 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                Margin="10,0,0,0">
                        <Image Source="./../../Assets/Images/simplecode-logo.jpg"
                               Height="20" Width="20"
                               Margin="0,0,8,0" />
                        <TextBlock Text="Simple Code"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontWeight="SemiBold" />
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button x:Name="MinimizeButton"
                                Width="46" Height="32"
                                Click="MinimizeButton_Click"
                                Style="{StaticResource WindowControlButtonStyle}">
                            <Path Data="M 0,0 H 8"
                                  Stroke="White"
                                  StrokeThickness="1" />
                        </Button>
                        <Button x:Name="CloseButton"
                                Width="46" Height="32"
                                Click="CloseButton_Click"
                                Style="{StaticResource WindowControlButtonStyle}">
                            <Path Data="M 0,8 L 8,0 M 0,0 L 8,8"
                                  Stroke="White"
                                  StrokeThickness="1" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Background="#F4D9D0">
                <Grid.Resources>
                    <DataTemplate DataType="{x:Type vms:WelcomeViewModel}">
                        <views:WelcomeView />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vms:WorkSpaceViewModel}">
                        <views:WorkspaceUserControl />
                    </DataTemplate>
                </Grid.Resources>

                <ContentControl Content="{Binding CurrentViewModel}" />
            </Grid>
        </Grid>
    </Border>
</Window>