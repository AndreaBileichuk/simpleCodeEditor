<UserControl x:Class="SimpleCode.Views.CodeWorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid Margin="10" Background="#F4D9D0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding OpenedFiles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Property="Background" Value="#921A40" />
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C75B7A" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Border
                                BorderBrush="#D9ABAB"
                                BorderThickness="1"
                                CornerRadius="6"
                                Margin="3"
                                Padding="5"
                                Background="White"
                                Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding OpenFileCommand}"
                                                  CommandParameter="{Binding}" />
                                </Border.InputBindings>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Text="{Binding Name}"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Foreground="#921A40"
                                        VerticalAlignment="Center"
                                        Margin="4,0,12,0" />
                                    <Button
                                        Grid.Column="1"
                                        Content="×"
                                        FontSize="16"
                                        Width="24"
                                        Height="24"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding CloseFileCommand}"
                                        Foreground="#C75B7A"
                                        Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F4D9D0" />
                                                        <Setter Property="Foreground" Value="#921A40" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <ScrollViewer x:Name="ScrollViewerMain" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                      Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ListView x:Name="LineNumbers"
                          ItemsSource="{Binding Lines}"
                          BorderThickness="0"
                          FontFamily="Consolas"
                          FontSize="16"
                          Padding="0"
                          Margin="0"
                          Background="#F4D9D0"
                          IsHitTestVisible="False"
                          VerticalAlignment="Top"
                          HorizontalContentAlignment="Center"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <ListView.Resources>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="MinHeight" Value="0" />
                            <Setter Property="Height" Value="18.74" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Foreground" Value="#921A40" />
                        </Style>
                    </ListView.Resources>
                </ListView>

                <TextBox x:Name="CodeEditor"
                         Grid.Column="1"
                         DataContext="{Binding}"
                         AcceptsReturn="True"
                         Text="{Binding FileContent, UpdateSourceTrigger=PropertyChanged}"
                         FontFamily="Consolas"
                         FontSize="16"
                         Padding="4,0,0,0"
                         BorderThickness="0"
                         Background="#F4D9D0"
                         Foreground="#921A40"
                         CaretBrush="#C75B7A"
                         SelectionBrush="#D9ABAB"
                         VerticalContentAlignment="Top"
                         VerticalScrollBarVisibility="Hidden"
                         HorizontalScrollBarVisibility="Auto">
                    <TextBox.InputBindings>
                        <KeyBinding CommandParameter="{Binding ActiveFile}" Command="{Binding SaveFileCodeCommand}"
                                    Key="S" Modifiers="Control" />
                        <KeyBinding CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=TextBox}}"
                                    Command="{Binding TabKeyPressedCommand}" Key="Tab" />
                    </TextBox.InputBindings>
                </TextBox>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>