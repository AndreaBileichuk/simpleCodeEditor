<UserControl x:Class="SimpleCode.Views.FileExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:viewmodels="clr-namespace:SimpleCode.ViewModels"
             xmlns:views="clr-namespace:SimpleCode.Views"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="#F4D9D0" />
            <Setter Property="BorderBrush" Value="#C75B7A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="3" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10"
                                                  ShadowDepth="2"
                                                  Direction="315"
                                                  Color="#921A40"
                                                  Opacity="0.2" />
                            </Border.Effect>
                            <ItemsPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#921A40" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="12,0" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Margin="3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="24" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>

                                <ContentPresenter x:Name="Icon"
                                                  ContentSource="Icon"
                                                  Margin="3" />

                                <ContentPresenter x:Name="HeaderHost"
                                                  Grid.Column="1"
                                                  ContentSource="Header"
                                                  VerticalAlignment="Center"
                                                  Margin="5,0,0,0" />

                                <Path x:Name="SubMenuArrow"
                                      Grid.Column="2"
                                      Fill="#921A40"
                                      Margin="10,0,0,0"
                                      VerticalAlignment="Center"
                                      Data="M0,0 L0,8 L4,4 Z"
                                      Visibility="Collapsed" />

                                <Popup x:Name="SubMenuPopup"
                                       PlacementTarget="{Binding ElementName=Border}"
                                       Placement="Right"
                                       IsOpen="{TemplateBinding IsSubmenuOpen}"
                                       Focusable="False"
                                       PopupAnimation="Fade">
                                    <Border x:Name="SubMenuBorder"
                                            Background="#F4D9D0"
                                            BorderBrush="#C75B7A"
                                            BorderThickness="1"
                                            CornerRadius="2"
                                            Padding="2">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10"
                                                              ShadowDepth="2"
                                                              Direction="315"
                                                              Color="#921A40"
                                                              Opacity="0.2" />
                                        </Border.Effect>
                                        <ScrollViewer CanContentScroll="True"
                                                      Style="{DynamicResource {ComponentResourceKey ResourceId=MenuScrollViewer, TypeInTargetAssembly={x:Type FrameworkElement}}}">
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="True">
                                <Setter TargetName="SubMenuArrow" Property="Visibility" Value="Visible" />
                            </Trigger>

                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#D9ABAB" />
                                <Setter Property="Foreground" Value="#921A40" />
                            </Trigger>

                            <Trigger Property="IsSubmenuOpen" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#D9ABAB" />
                                <Setter Property="Foreground" Value="#921A40" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TreeViewItem">
            <Setter Property="Padding" Value="10,2,10,2" />
            <Setter Property="FontSize" Value="14" />
        </Style>


        <!-- Keeping existing icon templates unchanged -->
        <DataTemplate x:Key="CppIcon">
            <svgc:SvgViewbox Source="pack://application:,,,/Assets/Icons/icons8-c++.svg" Width="18" Height="18"
                             Margin="0 0 10 0" />
        </DataTemplate>

        <DataTemplate x:Key="CIcon">
            <svgc:SvgViewbox Source="pack://application:,,,/Assets/Icons/icons8-c.svg" Width="18" Height="18"
                             Margin="0 0 10 0" />
        </DataTemplate>

        <DataTemplate x:Key="DefaultFileIcon">
            <svgc:SvgViewbox Source="pack://application:,,,/Assets/Icons/icons8-file.svg" Width="18" Height="18"
                             Margin="0 0 10 0" />
        </DataTemplate>

        <views:FileIconTemplateSelector x:Key="FileIconSelector"
                                        CppIcon="{StaticResource CppIcon}"
                                        CIcon="{StaticResource CIcon}"
                                        DefaultIcon="{StaticResource DefaultFileIcon}" />

        <!--Folder template-->
        <HierarchicalDataTemplate x:Key="FolderTemplate"
                                  DataType="{x:Type viewmodels:FolderViewModel}"
                                  ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <StackPanel.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add" CommandParameter="{Binding}">
                            <MenuItem Header="C++ File" CommandParameter="{Binding}"
                                      Command="{Binding CreateCppFileCommand}" />
                            <MenuItem Header="C File" CommandParameter="{Binding}"
                                      Command="{Binding CreateCFileCommand}" />
                            <MenuItem Header="Header File" CommandParameter="{Binding}"
                                      Command="{Binding CreateHeaderFileCommand}" />
                            <MenuItem Header="New Folder" CommandParameter="{Binding}"
                                      Command="{Binding CreateNewFolderCommand}" />
                        </MenuItem>
                        <MenuItem Header="Rename"
                                  Command="{Binding RenameFolderCommand}" CommandParameter="{Binding}" />
                        <MenuItem Header="Delete"
                                  Command="{Binding DeleteFolderCommand}"
                                  CommandParameter="{Binding}" />
                    </ContextMenu>
                </StackPanel.ContextMenu>
                <svgc:SvgViewbox Source="pack://application:,,,/Assets/Icons/icons8-folder.svg" Width="18" Height="18"
                                 Margin="0 0 10 0" />
                <TextBlock Text="{Binding Name}" Foreground="#F4D9D0" />
            </StackPanel>
        </HierarchicalDataTemplate>

        <!-- File Template -->
        <DataTemplate x:Key="FileTemplate" DataType="{x:Type viewmodels:FileItemViewModel}">
            <StackPanel Orientation="Horizontal">
                <StackPanel.ContextMenu>
                    <ContextMenu>
                        <MenuItem Command="{Binding DeleteFileCommand}" Header="Delete File"
                                  CommandParameter="{Binding}" />
                        <MenuItem Command="{Binding RenameFileCommand}" Header="Rename File"
                                  CommandParameter="{Binding}" />
                        <MenuItem Command="{Binding OpenFileCommand}" Header="Open File" CommandParameter="{Binding}" />
                        <MenuItem Command="{Binding CloseFileCommand}" Header="Close File" CommandParameter="{Binding}" />
                    </ContextMenu>
                </StackPanel.ContextMenu>

                <ContentControl Content="{Binding Extension}"
                                ContentTemplateSelector="{StaticResource FileIconSelector}" />
                <TextBlock Text="{Binding Name}" Foreground="#F4D9D0" />
                <StackPanel.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding OpenFileCommand}" />
                </StackPanel.InputBindings>
            </StackPanel>
        </DataTemplate>

        <views:FileExplorerTemplateSelector x:Key="ExplorerTemplateSelector"
                                            FolderTemplate="{StaticResource FolderTemplate}"
                                            FileTemplate="{StaticResource FileTemplate}">
        </views:FileExplorerTemplateSelector>
    </UserControl.Resources>

    <Grid Background="#F4D9D0" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="File Explorer"
                   FontSize="18" FontWeight="Bold" Foreground="#921A40"
                   VerticalAlignment="Center" Padding="12,0" />

        <TreeView Grid.Row="1"
                  BorderBrush="#C75B7A"
                  BorderThickness="1"
                  Background="#921A40"
                  Margin="10"
                  Padding="5"
                  ItemsSource="{Binding RootFolders}"
                  ItemTemplateSelector="{StaticResource ExplorerTemplateSelector}">
            <TreeView.Resources>
                <LinearGradientBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#C75B7A" Offset="0" />
                    <GradientStop Color="#F4D9D0" Offset="1" />
                </LinearGradientBrush>

                <LinearGradientBrush x:Key="{x:Static SystemColors.ControlBrushKey}" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F4D9D0" Offset="0" />
                    <GradientStop Color="#D9ABAB" Offset="1" />
                </LinearGradientBrush>
            </TreeView.Resources>
        </TreeView>

    </Grid>
</UserControl>