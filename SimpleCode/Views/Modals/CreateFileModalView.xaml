<Window x:Class="SimpleCode.Views.Modals.CreateFileModalView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Height="250" Width="400"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./../../GenericStyles/ModalButtonsStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="#F4D9D0"
            CornerRadius="15"
            BorderThickness="1"
            BorderBrush="#C75B7A">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Background="#C75B7A"
                    CornerRadius="15,15,0,0">
                <Grid>
                    <TextBlock Text="Create File"
                               x:Name="TitleBlock"
                               Foreground="#F4D9D0"
                               FontSize="16"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                    <Button Content="✕"
                            HorizontalAlignment="Right"
                            Width="40"
                            Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding CancelCommand}"
                            Style="{DynamicResource CloseWindowModal}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Foreground="#F4D9D0">
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1"
                        Orientation="Vertical"
                        Margin="30"
                        VerticalAlignment="Center">
                <TextBox Name="FileName"
                         Height="40"
                         FontSize="14"
                         Style="{StaticResource ModernTextBox}"
                         Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}"
                         TextAlignment="Center"
                         Margin="0,0,0,15">
                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding SaveCommand}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                    Key="Enter" />
                        <KeyBinding Command="{Binding CancelCommand}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                    Key="Escape" />
                    </TextBox.InputBindings>
                </TextBox>

                <TextBlock x:Name="Extension"
                           Text="{Binding Extension}"
                           FontSize="14"
                           Foreground="#921A40"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20" />

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Margin="0 0 20 0"
                            Content="Cancel"
                            Height="45"
                            Width="100"
                            Command="{Binding CancelCommand}"
                            Style="{DynamicResource CancelButtonModal}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            FontSize="16">
                    </Button>

                    <Button Content="Save"
                            Height="45"
                            Width="100"
                            FontSize="16"
                            Style="{DynamicResource SaveButtonModal}"
                            Command="{Binding SaveCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>